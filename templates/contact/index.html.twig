{% extends 'base.html.twig' %} 

{% block content %}
<style>
main {
    margin-top: 8rem;
}

.contactForm {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}

form h1 {
    text-align: center;
    margin: 1rem;
    font-size: 1.5rem;
}

.contactForm .form-control {
    padding: 0.5rem;
    margin: 0.5rem;
    width: 25%;
}

.form-control:focus {
    outline: none; /* Supprime l'outline par d√©faut */
    outline: 3px solid hsl(49, 100%, 65%);
    /* Change la couleur et la largeur de l'outline */
}

.contactForm textarea {
    width: 25%;
    margin: 1rem;
}

.btnSubmit {
    background: black;
    color: hsl(49, 100%, 65%);
    font-weight: bolder;
    font-size: 1rem;
    border-radius: 10px;
    padding: 0.5rem;
    margin-top: 1rem;
    width: 10%;
}
.btnSubmit:hover {
    background-color: brown;
}

@media screen and (max-width: 768px) {
    form h1 {
    font-size: 1rem;
    }

    .contactForm .form-control {
    padding: 0.5rem;
    margin: 1rem;
    width: 70%;
    }

    .contactForm textarea {
    width: 50%;
    }

    .btnSubmit {
    width: 25%;
    }
}
</style>
<main>
<form method="post">
    <h1>CONTACT-US</h1>
    <div class="contactForm">
    <input
        type="text"
        class="form-control"
        name="prenom"
        placeholder="First name"
        required
    />

    <input
        type="text"
        class="form-control"
        name="nom"
        placeholder="Last name"
        required
    />

    <input
        type="email"
        class="form-control"
        name="email"
        placeholder="name@example.com"
        required
    />

    <textarea
        class="form-control"
        name="message"
        rows="3"
        placeholder="Your message"
        required
    ></textarea>

    <input type="submit" class="btnSubmit" value="SUBMIT" />
    </div>
</form>
</main>

{% endblock %}
