{% extends 'base.html.twig' %} 

{% block content %}

<style>
    main {
        margin-top: 8rem;
    }
    .btn {
        margin-top: 1rem;
        background-color: black;
        color: hsl(49, 100%, 65%);
        font-weight: bold;
        border-radius: 5px;
        padding: 10px;
    }
    .btn:hover{
        background-color: brown;
    }
</style>
<main>
<div class="container my-5">
    <div class="row ">
    <div class="col-md-6">

        <img src="/uploads/{{ product.illustration }}" alt=" product.name" class="img-fluid">
    </div>
    <div class="col-md-6">
        <small><i><a class="text-black fw-bold" href="{{ path('app_category', {slug : product.category.slug } ) }}">{{ product.category.name }}</a> < {{ product.name }}</i></small>
        <h1>{{ product.name }}</h1>
        <span class="d-block mb-3">{{ product.pricewt|price }}</span>
        {{ product.description|raw }} 
        
        <a href="{{ path('app_cart_add', { id: product.id} ) }}" class="btn">Add To Cart</a>
        
    </div>
</div>
</div>

</main>

{% endblock %}
