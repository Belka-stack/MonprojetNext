{% extends 'base.html.twig' %}

{% block content %}
<style>
    main {
        margin-top: 8rem;
    }

    .formForgotPassword {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 30%;
        margin: 0 auto;
        text-align: center;
        font-weight: bold;
        background-color: hsl(49, 100%, 65%);
        padding-top: 1rem;
        padding-bottom: 1rem;
        border-radius: 5px;
    }

    label {
        padding-top: 15px;
        margin: 10px;
    }

    h3 {
        text-align: center;
        font-weight: bold;
        padding-top: 1rem;
    }

    .form-control {
        width: 20rem;
        margin-bottom: 1rem;
    }

    .forgot {
        padding-top: 1rem;
        color: black;
    }

    .butOne {
        margin-top: 1rem;
        background-color: black;
        color: hsl(49, 100%, 65%);
        font-weight: bold;
        border-radius: 5px;
        padding: 10px;
    }

    .butOne:hover {
        background-color: brown;
    }



    @media screen and (max-width: 768px) {
        main {
            margin-top: 4rem;
        }

        .formForgotPassword {
            width: 90%;
        }

        .form-control {
            width: 17rem;
        }
    }
</style>

<main>
    <div class="container my-5">
        <h3>Forgot Your Password?</h3>

        {% for label, messages in app.flashes %}
            <div class="alert alert-{{ label }}">
                {{ messages | join('<br>') | raw }}
            </div>
        {% endfor %}

        <form action="{{ path('app_forgot_password') }}" method="POST" class="formForgotPassword">
            <label for="email">Enter your email address:</label>
            <input class="form-control" type="email" id="email" name="email" placeholder="Your email" required>

            <button type="submit" class="butOne">Submit</button>

        </form>

        
    </div>
</main>

{% endblock %}
